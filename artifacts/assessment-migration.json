{
  "migrationFile": {
    "version": "1.0.0",
    "description": "Assessment service handles AI exams, question generation, proctoring events and results.",
    "dependencies": [
      "directory-service",
      "skills-engine-service",
      "course-builder-service",
      "devlab-service",
      "LearningAnalytics"
    ],
    "api": {
      "endpoints": [
        {
          "path": "/api/fill-content-metrics/",
          "method": "POST",
          "description": "Universal integration endpoint used by Coordinator",
          "requestSchema": {
            "type": "object",
            "properties": {
              "requester_service": { "type": "string" },
              "payload": { "type": "object" },
              "response": {
                "type": "object",
                "properties": {
                  "answer": { "type": "string" }
                }
              }
            },
            "required": ["requester_service", "payload", "response"]
          }
        }
      ]
    },
    "capabilities": [
      "generate baseline exam",
      "generate post-course exam",
      "AI-grade learner exam",
      "evaluate theoretical questions",
      "evaluate coding exercises",
      "handle proctoring",
      "store exam packages",
      "store results",
      "send analytics events"
    ],
    "database": {
      "tables": []
    },
    "events": {
      "publishes": [
        { "name": "assessment.completed" },
        { "name": "assessment.package.generated" }
      ],
      "subscribes": [
        { "name": "course.completion" }
      ]
    }
  }
}
